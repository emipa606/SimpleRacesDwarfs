<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ScenarioDef>
    <defName>DwarfScenario</defName>
    <label>Dwarf Explorers</label>
    <description>A group of five dwarfs are exploring the planets, leaving their homeland to start again in search for more gold, silver, steel; all that good stuff!\n\nNote: You will start pretty decently equipped to start a new colony. As this was a planned effort by the dwarven community, this is a slightly easier scenario.</description>
    <scenario>
      <summary>Five dwarfs builds a new world, full of riches. They are stubborn, prefers to mine their sorrows away, but damn, they throw great parties. Slightly easy scenario.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>DwarfColony</factionDef>
      </playerFaction>
      <parts>
        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>5</pawnCount>
        </li>
        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>
        <!-- Player pawns modifiers -->
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>200</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Pemmican</thingDef>
          <count>500</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>50</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineHerbal</thingDef>
          <count>15</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Club</thingDef>
          <stuff>Steel</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Spear</thingDef>
          <stuff>Steel</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Bow_Short</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_LongSword</thingDef>
          <stuff>Steel</stuff>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <animalKind>Ibex</animalKind>
          <count>3</count>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>200</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>1000</count>
        </li>
        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>After a long journey, your dwarfs seem to have found a place they can call home. Hopefully the earth is full of riches.</text>
          <closeSound>GameStartSting</closeSound>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>